# App
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080
APP_CORS_ORIGINS=http://localhost:3000

# Database (prod)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/dospring
SPRING_DATASOURCE_USERNAME=dospring
SPRING_DATASOURCE_PASSWORD=dospring

# JWT (REQUIRED in prod) - min 32 chars
JWT_SECRET=change-me-in-env-please-change-me-in-env-please
JWT_ISSUER=dospring
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=2592000

# Auth policy
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCK_MINUTES=15
AUTH_PWD_MIN_LENGTH=12
AUTH_PWD_HISTORY=5

# Crypto at rest (optional but recommended in prod)
# Base64 of 32 random bytes (AES-256 key). Example: openssl rand -base64 32
APP_CRYPTO_KEY_BASE64=

# Distributed rate limiting (optional)
APP_REDIS_ENABLED=false
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379
APP_REDIS_SSL=false
